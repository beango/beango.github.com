{% comment %}<!--存档  2011-06 （1）-->{% endcomment %}{% capture archives_year %}{{ 'now' | date: '%Y-%m' }}{% endcapture %}{% assign archives_num = 0 %}{% for post in site.posts %}{% capture post_year %}{{ post.date | date: '%Y-%m' }}{% endcapture %}{% if archives_year != post_year %}{% if archives_num > 0 %}<li><a href="/archive.html#arch-{{ archives_year }}">{{ archives_year }} （{{ archives_num }}）</a></li>{% endif %}{% assign archives_year = post_year %}{% assign archives_num = 1 %}{% else %}{% assign archives_num = archives_num | plus:1 %}{% endif %}{% if forloop.last %}<li><a href="/archive.html#arch-{{ archives_year }}">{{ archives_year }} （{{ archives_num }}）</a></li>{% endif %}{% endfor %}